#!/bin/bash

set -euo pipefail

. "${HOME}"/.line-api-token

out=$(mktemp -t line-job.stdout)
err=$(mktemp -t line-job.stderr)

set +e
SECONDS=0
bash -c "$*" >"$out" 2>"$err"
exitcode=$?
set -e
if [ $exitcode -eq 0 ]; then
  result=ğŸ‘Œ
else
  result="ğŸ˜¢ [$exitcode]"
fi

line-me <<<"$result $SECONDS s"$'\n'"$*"
[ -s "$out" ] && line-me --no-header <<<$'stdout:\n'"$(cat "$out")"
[ -s "$err" ] && line-me --no-header <<<$'stderr:\n'"$(cat "$err")"
