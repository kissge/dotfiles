#!/bin/bash

set -Eeuo pipefail

TEMP=$(mktemp)

winget.exe export "$TEMP"
jq '.Sources |= map(
  .Packages |= ([.[] | select(
    .PackageIdentifier |
    test("^Microsoft\\.(AppInstaller|DevHome|DotNet\\.DesktopRuntime|Edge|Teams$|UI|VCLibs|VCRedist|WindowsTerminal)") |
    not
  )] | sort_by(.PackageIdentifier))
)' "$TEMP" > ~/.config/windows/winget.json

rm "$TEMP"
